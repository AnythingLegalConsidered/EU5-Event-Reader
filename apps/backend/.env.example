PORT=3000
NODE_ENV=development
LOCALIZATION_PATH=./src/__tests__/fixtures/localization
DEFAULT_LANGUAGE=english
FALLBACK_LANGUAGE=english
# Path to vanilla EU5 event files (absolute or project-relative)
VANILLA_EVENTS_PATH=./src/__tests__/fixtures
# Path to local/override event files (absolute or project-relative)
LOCAL_EVENTS_PATH=./src/__tests__/fixtures
# Default source for the API: 'vanilla' or 'local'
DEFAULT_SOURCE=vanilla

# Cache configuration
CACHE_DIR=.cache
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Parser workers
ENABLE_ASYNC_PARSING=true
PARSER_WORKER_COUNT=2
